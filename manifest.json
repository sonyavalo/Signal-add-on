{
    "manifest_version": 2,
    "name": "Signal",
    "description": "Signal add-on for encrypting emails' content using the Signal library",
    "version": "1.0",
    "author": "Ehsan, Sofya, Shiva, Nazmul, and Sanju",
    "applications": {
        "gecko": {
            "id": "ehsankhodayar349@gmail.com",
            "strict_min_version": "78.0"
        }
    },
    "icons": {
        "64": "images/signal-64px.png",
        "32": "images/signal-32px.png",
        "16": "images/signal-16px.png"
    },
    "message_display_action": {
        "default_title": "Signal",
        "default_icon" : "images/signal-32px.png",
        "default_popup": "mainPopup/BarcodeForm.html"
    },
    "compose_action": {
        "default_title": "Signal",
        "default_icon" : "images/signal-32px.png",
        "default_popup": "mainPopup/compose.html"
    },
    "background": {
        "scripts": [
            "js/jquery-3.6.0.min.js",
            "js/background.js"
        ]
    },
    "permissions": [
        "storage",
        "messagesRead",
        "compose",
        "compose.send"
    ]
}